<launch>
        <arg name="camera_name" default="ob_camera"/>
        <arg name="3d_sensor" default="gemini2"/>
        <arg name="camera1_prefix" default="01"/>
        <arg name="camera2_prefix" default="02"/>
        <arg name="camera1_usb_port" default="2-3"/>
        <arg name="camera2_usb_port" default="2-5"/>

        <arg name="device_num" default="2"/>
        <node name="camera" pkg="orbbec_camera" type="ob_cleanup_shm_node" respawn="true" output="screen"/>
        <include file="$(find orbbec_camera)/launch/$(arg 3d_sensor).launch">
        <arg name="camera_name" value="$(arg camera_name)_$(arg camera1_prefix)"/>
        <arg name="usb_port" value="$(arg camera1_usb_port)"/>
        <arg name="device_num" value="$(arg device_num)"/>
        </include>

        <include file="$(find orbbec_camera)/launch/$(arg 3d_sensor).launch">
        <arg name="camera_name" value="$(arg camera_name)_$(arg camera2_prefix)"/>
        <arg name="usb_port" value="$(arg camera2_usb_port)"/>
        <arg name="device_num" value="$(arg device_num)"/>
        </include>

        <node pkg="topic_tools" type="relay" name="relay_depth_points_r" respawn="true"
        args="/ob_camera_01/depth/points /r2_19132/right_depth_camera/points"/>

        <node pkg="topic_tools" type="relay" name="relay_ir_camera_info_r" respawn="true"
        args="/ob_camera_01/ir/camera_info /r2_19132/right_depth_camera/infra1/camera_info"/>

        <node pkg="topic_tools" type="relay" name="relay_ir_image_raw_r" respawn="true"
        args="/ob_camera_01/ir/image_raw /r2_19132/right_depth_camera/infra1/image_rect_raw"/>



        <node pkg="topic_tools" type="relay" name="relay_depth_points_l" respawn="true"
        args="/ob_camera_02/depth/points /r2_19132/left_depth_camera/points"/>

        <node pkg="topic_tools" type="relay" name="relay_ir_camera_info_l" respawn="true"
        args="/ob_camera_02/ir/camera_info /r2_19132/left_depth_camera/infra1/camera_info"/>

        <node pkg="topic_tools" type="relay" name="relay_ir_image_raw_l" respawn="true"
        args="/ob_camera_02/ir/image_raw /r2_19132/left_depth_camera/infra1/image_rect_raw"/>


</launch>
